@{
    ViewData["Title"] = "Task Form";
}

@model mission6.Models.Task

<div>
    <form method="post">

        <!--TaskName-->
        <div asp-validation-summary="All"></div>
        <label asp-for="TaskName">Task Name</label>
        <input asp-for="TaskName" />
        <br />

        <!--Due Date-->
        <label asp-for="DueDate">Due Date</label>
        <input asp-for="DueDate" /><br />

        <!--Quadrant-->
        <label asp-for="Quadrant">Quadrant</label>
        <input asp-for="Quadrant" /><br />

        <!--Completed-->
        <label asp-for="Completed">Has the Task Been Completed?</label>
        <select asp-for="Completed">
            <option value="True">Yes</option>
            <option value="False">No</option>
        </select><br />


        <!--Category-->
        <label asp-for="Categoryid">Category</label>
        <select asp-for="Categoryid">
            @foreach (Category x in ViewBag.Categories)
            {
                <option value="@x.Categoryid">@x.CategoryName</option>
            }
        </select><br />

        <button type="submit">Submit</button>
    </form>

</div>
